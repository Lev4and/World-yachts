<UserControl x:Class="World_yachts.Views.UserControls.ExpanderWithCheckBoxes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:World_yachts.Views.UserControls"
             x:Name="_this"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <Expander Header="{Binding ElementName=_this, Path=ElementHeader, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MaxHeight="200" IsEnabled="True">
            <ScrollViewer>
                <Grid Name="grid" Background="#FFE5E5E5"/>
            </ScrollViewer>
        </Expander>
    </Grid>
</UserControl>
